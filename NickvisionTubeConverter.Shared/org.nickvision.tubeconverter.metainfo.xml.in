<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>org.nickvision.tubeconverter</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <name>Tube Converter</name>
  <developer_name>Nickvision</developer_name>
  <summary>Get video and audio from the web</summary>
  <description>
    <p>— A basic yt-dlp frontend</p>
    <p>— Supports downloading videos in multiple formats (mp4, webm, mp3, opus, flac, and wav)</p>
    <p>— Run multiple downloads at a time</p>
    <p>— Supports downloading metadata and video subtitles</p>
  </description>
  <keywords>
    <keyword>youtube</keyword>
    <keyword>video</keyword>
    <keyword>audio</keyword>
    <keyword>media</keyword>
    <keyword>download</keyword>
  </keywords>
  <launchable type="desktop-id">org.nickvision.tubeconverter.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/NickvisionApps/TubeConverter/master/NickvisionTubeConverter.GNOME/Screenshots/Light.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/NickvisionApps/TubeConverter/master/NickvisionTubeConverter.GNOME/Screenshots/StartScreen.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/NickvisionApps/TubeConverter/master/NickvisionTubeConverter.GNOME/Screenshots/AddDownload.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/NickvisionApps/TubeConverter/master/NickvisionTubeConverter.GNOME/Screenshots/Dark.png</image>
    </screenshot>
  </screenshots>
  <url type="homepage">https://github.com/NickvisionApps/TubeConverter</url>
  <url type="bugtracker">https://github.com/NickvisionApps/TubeConverter/issues</url>
  <url type="donation">https://github.com/sponsors/nlogozzo</url>
  <url type="translate">https://github.com/NickvisionApps/TubeConverter/blob/master/CONTRIBUTING.md#providing-translations</url>
  <project_group>Nickvision</project_group>
  <provides>
    <binary>org.nickvision.tubeconverter</binary>
    <binary>NickvisionTubeConverter.GNOME</binary>
  </provides>

  <custom>
    <value key="Purism::form_factor">workstation</value>
    <value key="Purism::form_factor">mobile</value>
  </custom>
  
  <releases>
    <release version="2023.5.0-beta1" date="2023-05-07">
      <description>
        <p>- Added the ability to specify a timeframe of a video to download</p>
        <p>- Added the per-download option to crop the thumbnail of a video as a square</p>
        <p>- Added the ability to stop all downloads</p>
        <p>- Added the ability to retry all failed downloads</p>
        <p>- Added the ability to clear queued downloads</p>
        <p>- When downloading a video, the quality options will be the specific resolutions of the video instead of Best, Good, Worst</p>
        <p>- Fixed an issue where some downloads could not be stopped and retried</p>
        <p>- Fixed a random crash users where experiencing when downloading</p>
        <p>- Improved UI/UX</p>
        <p>- Updated translations (Thanks everyone on Weblate!)</p>
      </description>
    </release>
  </releases>
  <content_rating type="oars-1.1" />
</component>
